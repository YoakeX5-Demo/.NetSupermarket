<DMSkin:DMSkinWindow
    x:Class="Supermarket.Pages.MemberManagement.Edit"
    xmlns:DMSkin="clr-namespace:DMSkin.WPF.Small;assembly=DMSkin.WPF.Small"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:local="clr-namespace:Supermarket.Pages"
    xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
    mc:Ignorable="d"
    Foreground="White"
    Background="White"
    DMShowMin="False"
    DMShowMax="False"
    DMShowClose="False"
    DMWindowShadowSize="10"
    DMSystemButtonSize="20"
    DMSystemButtonForeground="#FF666666"
    DMSystemButtonHoverColor="#33000000"
    DMWindowShadowColor="#FFC8C8C8" 
    DMSystemButtonShadowEffect="0"
    ResizeMode="CanResizeWithGrip"
    Title="用户管理-注册" Height="340.152" Width="658.04" 
	WindowStartupLocation="CenterScreen"
    MinHeight="268" MinWidth="360"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextElement.FontWeight="Medium"
    TextElement.FontSize="18"
    >

    <Grid Background="White">
        <Label Content="会员卡号：" HorizontalAlignment="Left" Margin="53,31,0,0" VerticalAlignment="Top" FontSize="18"/>
        <TextBox x:Name="txt_memberID" HorizontalAlignment="Left" Height="30" Margin="158,32,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="315" Text="" FontSize="18" KeyDown="Txt_memberID_KeyDown"/>
        <Label Content="会员姓名：" HorizontalAlignment="Left" Margin="53,79,0,0" VerticalAlignment="Top" FontSize="18"/>
        <TextBox x:Name="txt_memberName" HorizontalAlignment="Left" Height="30" Margin="158,80,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="141" Text="" FontSize="18"/>
        <Label Content="会员密码：" HorizontalAlignment="Left" Margin="53,127,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.302,0.281" FontSize="18"/>
        <PasswordBox x:Name="psw_memberPassword" HorizontalAlignment="Left" Margin="158,130,0,0" VerticalAlignment="Top" Width="141" Height="30" Password="" FontSize="18"/>
        <Label Content="确认密码 ：" HorizontalAlignment="Left" Margin="53,178,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.302,0.281" FontSize="18"/>
        <PasswordBox x:Name="psw_confirmPassword" HorizontalAlignment="Left" Margin="158,181,0,0" VerticalAlignment="Top" Width="141" Height="30" Password="" FontSize="18"/>
        <Label Content="手机号码：" HorizontalAlignment="Left" Margin="344,80,0,0" VerticalAlignment="Top" FontSize="18"/>
        <TextBox x:Name="txt_telephone" HorizontalAlignment="Left" Height="30" Margin="449,81,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="141" Text="" FontSize="18"/>
        <Label Content="会员说明：" HorizontalAlignment="Left" Margin="344,127,0,0" VerticalAlignment="Top" FontSize="18"/>
        <TextBox x:Name="txt_statement" HorizontalAlignment="Left" Height="83" Margin="449,128,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="141" Text="" FontSize="18"/>
        <Button x:Name="btn_Certain" Content="修改" IsEnabled="False" HorizontalAlignment="Left" Margin="100,243,0,0" VerticalAlignment="Top" Width="200" Height="35" Click="btn_Certain_Click" />
        <Button x:Name="btn_close" Content="关闭" HorizontalAlignment="Left" Margin="344,243,0,0" VerticalAlignment="Top" Width="200" Height="35" Click="btn_close_Click"/>
        <Button x:Name="btn_query" Content="查询" HorizontalAlignment="Left" Margin="486,32,0,0" VerticalAlignment="Top" Width="104" Height="30" Click="Btn_query_Click" />
    </Grid>
</DMSkin:DMSkinWindow>

<DMSkin:DMSkinWindow
    x:Class="Supermarket.Pages.MemberManagement.Add2"
    xmlns:DMSkin="clr-namespace:DMSkin.WPF.Small;assembly=DMSkin.WPF.Small"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:local="clr-namespace:Supermarket.Pages"
    xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
    mc:Ignorable="d"
    Foreground="White"
    Background="White"
    DMShowMin="False"
    DMShowMax="False"
    DMShowClose="False"
    DMWindowShadowSize="10"
    DMSystemButtonSize="20"
    DMSystemButtonForeground="#FF666666"
    DMSystemButtonHoverColor="#33000000"
    DMWindowShadowColor="#FFC8C8C8" 
    DMSystemButtonShadowEffect="0"
    ResizeMode="CanResizeWithGrip"
    Title="用户管理-注册" Height="413.444" Width="658.04" 
	WindowStartupLocation="CenterScreen"
    MinHeight="268" MinWidth="360"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextElement.FontWeight="Medium"
    TextElement.FontSize="18"
    >
    
    <Grid Background="White">
        <Grid Height="330.505" VerticalAlignment="Top">
            <Label Content="会员卡号：" HorizontalAlignment="Left" Margin="53,31,-51,0" VerticalAlignment="Top" FontSize="18"/>
            <TextBox x:Name="txt_memberID" HorizontalAlignment="Left" Height="30" Margin="158,32,-373,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="315" Text="" FontSize="18" KeyDown="Txt_memberID_KeyDown"/>
            <Button x:Name="btn_query" Content="查询" HorizontalAlignment="Left" Margin="486,32,-490,0" VerticalAlignment="Top" Width="104" Height="30" Click="Btn_query_Click" />
            <Label Content="会员姓名：" HorizontalAlignment="Left" Margin="53,79,-51,-9.86" VerticalAlignment="Top" FontSize="18"/>
            <TextBox x:Name="txt_memberName" IsReadOnly="True" HorizontalAlignment="Left" Height="30" Margin="158,80,-199,-10" TextWrapping="Wrap" VerticalAlignment="Top" Width="141" Text="" FontSize="18"/>
            <Label Content="手机号码：" HorizontalAlignment="Left" Margin="344,80,-342,-10.86" VerticalAlignment="Top" FontSize="18"/>
            <TextBox x:Name="txt_telephone" IsReadOnly="True" HorizontalAlignment="Left" Height="30" Margin="449,81,-490,-11" TextWrapping="Wrap" VerticalAlignment="Top" Width="141" Text="" FontSize="18"/>
            <Label Content="会员等级：" HorizontalAlignment="Left" Margin="53,192,-51,-122.86" VerticalAlignment="Top" FontSize="18"/>
            <TextBox x:Name="txt_memberLevel" IsReadOnly="True" HorizontalAlignment="Left" Height="30" Margin="158,193,-199,-123" TextWrapping="Wrap" VerticalAlignment="Top" Width="141" Text="" FontSize="18"/>
            <Label Content="会员余额：" HorizontalAlignment="Left" Margin="53,135,-51,-65.86" VerticalAlignment="Top" FontSize="18"/>
            <TextBox x:Name="txt_memberMoney" IsReadOnly="True" HorizontalAlignment="Left" Height="30" Margin="158,136,-199,-66" TextWrapping="Wrap" VerticalAlignment="Top" Width="141" Text="" FontSize="18"/>
            <Label Content="消费总额：" HorizontalAlignment="Left" Margin="344,135,-342,-65.86" VerticalAlignment="Top" FontSize="18"/>
            <TextBox x:Name="txt_totalMoney" IsReadOnly="True" HorizontalAlignment="Left" Height="30" Margin="449,136,-490,-66" TextWrapping="Wrap" VerticalAlignment="Top" Width="141" Text="" FontSize="18"/>
            <Label Content="会员说明：" HorizontalAlignment="Left" Margin="344,192,-342,-122.86" VerticalAlignment="Top" FontSize="18"/>
            <TextBox x:Name="txt_statement" IsReadOnly="True" HorizontalAlignment="Left" Height="32" Margin="449,193,-490,-125" TextWrapping="Wrap" VerticalAlignment="Top" Width="141" Text="" FontSize="18"/>
            <Label Content="充值金额：" HorizontalAlignment="Left" Margin="53,248,-51,-178.86" VerticalAlignment="Top" FontSize="18"/>
            <TextBox x:Name="txt_recharge" HorizontalAlignment="Left" Height="32" Margin="158,249,-373,-181" TextWrapping="Wrap" VerticalAlignment="Top" Width="315" Text="" FontSize="18" KeyDown="Txt_recharge_KeyDown"/>
            <Button x:Name="btn_Certain" Content="充值" HorizontalAlignment="Left" Margin="486,249,-490,-179" VerticalAlignment="Top" Width="104" Height="30" Click="btn_Certain_Click"/>
        </Grid>
        <Grid Margin="150,0,150,16" VerticalAlignment="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="btn_Certain1" Content="确定" Width="100" Click="btn_Certain_Click" Height="32" Margin="0"/>
            <Button x:Name="btn_Cancel" Content="取消" Click="btn_Cancel_Click" Height="32" Width="100" Margin="0" Grid.Column="1"/>
        </Grid>
    </Grid>
</DMSkin:DMSkinWindow>
